package Objects;

import Link.LinkedList;
import Link.Node;

public class DisplayCase {
    public String caseId;
    public String type;
    public boolean isLighted;

    public LinkedList<Tray> trays = new LinkedList<>();

    public DisplayCase(String caseId, String type, boolean isLighted) {
        this.caseId = caseId;
        this.type = type;
        this.isLighted = isLighted;
    }

    // 封装
    public String getCaseId() {
        return caseId;
    }

    public void setCaseId(String caseId) {
        this.caseId = caseId;
    }

    public String getType() {
        return type;
    }

    public void setType(String type) {
        this.type = type;
    }

    public boolean getIsLighted() {
        return isLighted;
    }

    public void setIsLighted(boolean isLighted) {
        this.isLighted = isLighted;
    }

    public void addTray(Tray t) {
        trays.add(t);
    }

@Override
    public String toString() {
        return ("Case " + caseId + " (type:" + type + " " + "light:" + isLighted + ")" );
    }


    // 添加获取 trays 链表头节点的方法
    public Node<Tray> getHead() {
        return trays.getHead();
    }


}
